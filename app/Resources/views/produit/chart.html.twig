{% extends 'base.html.twig' %}

{% block body %}
    <br><br><br><br>
    <div class="main-content">
        <section class="inner-header divider parallax layer-overlay overlay-white-8" data-bg-img="http://placehold.it/1920x1280">
      <div class="container pt-60 pb-60">
        <!-- Section Content -->
        <div class="section-content">
          <div class="row">
            <div class="col-md-12 text-center">
              <h2 class="title">Statistique</h2>
              <ol class="breadcrumb text-center text-black mt-10">
                <li><a href="{{ path('homepage') }}">Home</a></li>
                <li><a href="{{ path('produit_index') }}">Shop</a></li>
                <li class="active text-theme-colored">Store Settings</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
    </section>

        <div class="row">
            <div class="col-lg-7 col-lg-offset-3 text-center">
                <div id="div_chart"></div>


                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Libelle</th>
                            <th>Stock</th>
                            <th>Description</th>
                            <th>Etat</th>
                            <th>Prix</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for prod in products %}
                        <tr>
                            <th scope="row">{{ prod.idproduit }}</th>
                            <td>{{ prod.libelleproduit }}</td>
                            <td>{{ prod.stock }}</td>
                            <td>{{ prod.descriptionproduit }}</td>
                            <td>{{ prod.etatproduit }}</td>
                            <td>${{ prod.prixproduit }}</td>
                            <td><img src="{{ asset('productImages/')~ prod.imageproduit}}" class="img-thumbnail" style="height: 100px" width="100px"></td>
                            <td><a href="{{ path('produit_edit',{'idproduit':prod.idproduit}) }}"><button>Edit / Supprimer</button></a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


    </div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    {{ gc_draw(piechart, 'div_chart') }}
</script>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/jquery-2.2.4.min.js') }}"></script>
    <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <!-- JS | jquery plugin collection for this theme -->
    <script src="{{ asset('js/jquery-plugin-collection.js') }}"></script>
{% endblock %}