{% extends 'base.html.twig' %}

{% block body %}
    <link href="{{ asset('css/colors/theme-skin-lightgreen.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('css/style-main.css') }}" rel="stylesheet" type="text/css">
    <div class="main-content">

        <!-- Section: inner-header -->
        <section class="inner-header divider parallax layer-overlay overlay-white-8" data-bg-img="http://placehold.it/1920x1280">
            <div class="container pt-60 pb-60">
                <!-- Section Content -->
                <div class="section-content">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h2 class="title">Service edit</h2>
                            <ol class="breadcrumb text-center text-black mt-10">
                                <li><a href="{{ path('homepage') }}">Home</a></li>
                                <li><a href="{{ path('servicelist_index') }}">Liste du Service </a></li>
                                <li class="active text-theme-colored">{{ servicelist.servicetype }}</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-push-3">
                        <div class="border-1px p-25">
                            <h4 class="text-theme-colored text-uppercase m-0">Modifier le Service </h4>
                            <div class="line-bottom mb-30"></div>
                            <p>SVP expliquer convenablement votre service demander</p>
                            {{ form_start(edit_form, {'class': 'mt-30'}) }}
                                <div class="row">


                            {{ form_widget(edit_form) }}
                                    <br>
                                    <div class="form-group mb-0 mt-20">
                                        <button type="submit" class="btn btn-dark btn-theme-colored" data-loading-text="Please wait...">Submit</button>
                                    </div>
                            {{ form_end(edit_form) }}
                                    {{ form_start(delete_form) }}
                                    <button type="submit" class="btn btn-theme-colored btn-danger btn-lg" data-loading-text="Please wait...">Delete</button>
                                    {{ form_end(delete_form) }}
                            <!-- Appointment Form Validation-->
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- end main-content -->

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/jquery-2.2.4.min.js') }}"></script>
    <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <!-- JS | jquery plugin collection for this theme -->
    <script src="{{ asset('js/jquery-plugin-collection.js') }}"></script>
{% endblock %}